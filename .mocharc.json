{
	"node-option": [
		"no-warnings",
		"loader=ts-node/esm"
	],
	"extensions": [
		"ts",
		"tsx"
	],
	"spec": "tests/unit/**/*.spec.ts",
	"reporter": [
		"mocha-junit-reporter", "list"
	],
	"reporter-options": "mochaFile=test-results/results.xml",
	"node-env": {
		"TS_NODE_PROJECT": "./tsconfig.test.json",
		"TS_NODE_TRANSPILE_ONLY": "true",
		"TS_NODE_ESM": "true"
	}
}