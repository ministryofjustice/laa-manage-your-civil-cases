{
  "name": "laa-manage-your-civil-cases",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "main": "public/app.js",
  "type": "module",
  "imports": {
    "#*": "./*"
  },
  "scripts": {
    "start": "node public/app.js",
    "clean": "rimraf public",
    "build": "yarn clean && yarn build:ts && node public/esbuild.js",
    "lint": "yarn eslint . --fix",
    "dev": "yarn build:ts && concurrently \"tsc --watch\" \"node public/esbuild.js --watch\" \"nodemon\"",
    "deploy": "./scripts/deploy.sh",
    "prepare": "husky",
    "tsc": "tsc --noEmit",
    "build:ts": "tsc",
    "test": "yarn test:unit && yarn test:e2e",
    "test:unit": "./node_modules/.bin/mocha",
    "test:server": "node public/src/test-server.js",
    "test:e2e": "yarn playwright test --config=tests/playwright/playwright.config.ts",
    "test:e2e:headed": "yarn playwright test --config=tests/playwright/playwright.config.ts --headed",
    "test:e2e:debug": "yarn playwright test --config=tests/playwright/playwright.config.ts --debug",
    "test:accessibility": "yarn playwright test --config=tests/playwright/playwright.config.ts --grep @accessibility",
    "test:specific": "yarn playwright test --config=tests/playwright/playwright.config.ts --grep",
    "coverage": "c8 yarn test:unit --check-coverage"
  },
  "engines": {
    "node": "25.2.1"
  },
  "dependencies": {
    "@ministryofjustice/frontend": "^7.1.1",
    "@x-govuk/govuk-prototype-components": "^5.0.2",
    "axios": "1.13.2",
    "body-parser": "^2.2.1",
    "chalk": "^5.6.2",
    "compression": "^1.8.1",
    "cookie-parser": "~1.4.6",
    "csrf-sync": "^4.2.1",
    "debug": "~4.4.3",
    "dotenv": "^17.2.3",
    "express": "^5.2.0",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.18.2",
    "express-validator": "^7.3.0",
    "figlet": "^1.9.3",
    "fs-extra": "^11.3.3",
    "govuk-frontend": "^5.13.0",
    "helmet": "^8.1.0",
    "http-errors": "~2.0.0",
    "i18next": "^25.7.3",
    "libphonenumber-js": "^1.12.33",
    "moment": "^2.30.1",
    "morgan": "~1.10.1",
    "nunjucks": "^3.2.4"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.56.1",
    "@types/chai": "^5.2.3",
    "@types/compression": "^1.7.5",
    "@types/connect-livereload": "^0.6.3",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^5.0.6",
    "@types/express-session": "^1.18.1",
    "@types/figlet": "^1.7.0",
    "@types/fs-extra": "^11.0.4",
    "@types/jsdom": "^27.0.0",
    "@types/livereload": "^0.9.5",
    "@types/mocha": "^10.0.10",
    "@types/morgan": "^1.9.9",
    "@types/node": "^25.0.2",
    "@types/nunjucks": "^3.2.6",
    "@types/sinon": "^21.0.0",
    "@types/supertest": "^6.0.3",
    "@types/validator": "^13.15.4",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "axe-core": "^4.11.0",
    "c8": "^10.1.3",
    "chai": "^6.2.0",
    "chokidar": "5.0.0",
    "concurrently": "^9.2.1",
    "connect-livereload": "^0.6.1",
    "cross-env": "^10.1.0",
    "esbuild": "^0.27.2",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-sass-plugin": "^3.3.1",
    "eslint": "^9.39.2",
    "eslint-config-love": "^140.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsdoc": "^61.5.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.6",
    "livereload": "^0.10.2",
    "middleware-axios": "^3.0.0",
    "mocha": "^11.7.5",
    "msw": "^2.12.7",
    "nodemon": "^3.1.9",
    "playwright-core": "^1.56.1",
    "prettier": "^3.7.3",
    "rimraf": "^6.1.0",
    "sass": "^1.97.1",
    "sass-embedded": "^1.97.1",
    "sinon": "^21.0.1",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix"
  },
  "packageManager": "yarn@4.9.2",
  "resolutions": {
    "form-data": "4.0.4",
    "glob": ">=11.1.0"
  }
}
