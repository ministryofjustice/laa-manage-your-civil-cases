{
  "name": "moj-express-skeleton",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "main": "public/app.js",
  "type": "module",
  "imports": {
    "#*": "./*"
  },
  "scripts": {
    "start": "node public/app.js",
    "clean": "rimraf public",
    "build": "yarn clean && yarn build:ts && node public/esbuild.js",
    "lint": "yarn eslint . --fix",
    "dev": "yarn build:ts && concurrently \"tsc --watch\" \"node public/esbuild.js --watch\" \"nodemon\"",
    "deploy": "./scripts/deploy.sh",
    "prepare": "husky",
    "tsc": "tsc --noEmit",
    "build:ts": "tsc",
    "test": "yarn test:unit && yarn test:e2e",
    "test:unit": "mocha",
    "test:e2e": "yarn playwright test --config=playwright.config.ts",
    "coverage": "c8 yarn test:unit --check-coverage"
  },
  "engines": {
    "node": "24.4.1"
  },
  "dependencies": {
    "@ministryofjustice/frontend": "^5.1.4",
    "axios": "^1.8.4",
    "body-parser": "^2.2.0",
    "chalk": "^5.4.1",
    "compression": "^1.8.1",
    "cookie-parser": "~1.4.6",
    "csrf-sync": "^4.2.1",
    "debug": "~4.4.1",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "express-session": "^1.18.2",
    "express-validator": "^7.2.1",
    "figlet": "^1.8.2",
    "fs-extra": "^11.3.0",
    "govuk-frontend": "^5.11.0",
    "helmet": "^8.1.0",
    "http-errors": "~2.0.0",
    "moment": "^2.30.1",
    "morgan": "~1.10.1",
    "nunjucks": "^3.2.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@playwright/test": "^1.54.1",
    "@types/chai": "^5.2.2",
    "@types/compression": "^1.7.5",
    "@types/connect-livereload": "^0.6.3",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^5.0.1",
    "@types/express-session": "^1.18.1",
    "@types/figlet": "^1.7.0",
    "@types/fs-extra": "^11.0.4",
    "@types/jsdom": "^21.1.7",
    "@types/livereload": "^0.9.5",
    "@types/mocha": "^10.0.10",
    "@types/morgan": "^1.9.9",
    "@types/node": "^24.0.14",
    "@types/nunjucks": "^3.2.6",
    "@types/sinon": "^17.0.4",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "c8": "^10.1.3",
    "chai": "^5.2.1",
    "chokidar": "4.0.3",
    "concurrently": "^9.2.0",
    "connect-livereload": "^0.6.1",
    "cross-env": "^7.0.3",
    "esbuild": "^0.25.6",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-sass-plugin": "^3.3.1",
    "eslint": "^9.31.0",
    "eslint-config-love": "^120.0.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-jsdoc": "^51.3.4",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.2",
    "livereload": "^0.9.3",
    "middleware-axios": "^3.0.0",
    "mocha": "^11.7.1",
    "nodemon": "^3.1.9",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "sass": "^1.86.3",
    "sass-embedded": "^1.89.2",
    "sinon": "^21.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix"
  },
  "packageManager": "yarn@4.9.2",
  "resolutions": {
    "form-data": "4.0.4"
  }
}
