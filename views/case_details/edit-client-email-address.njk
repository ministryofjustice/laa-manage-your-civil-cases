{% extends "base.njk" %}

{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "components/errorSummaryComponent.njk" import errorSummary %}

{% block pageTitle %}{{ t.forms.clientDetails.email.pageTitle | replace('{caseReference}', caseReference) | replace('{serviceName}', config.SERVICE_NAME) }}{% endblock %}

{% set backLinkHref = "/cases/" + caseReference + "/client-details" %}

{% block backLink %}
  {{ govukBackLink({
      text: t.common.back,
      href: backLinkHref,
      classes: "govuk-!-margin-bottom-0"
    }) }}
{% endblock %}

{% block pageContent %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% if error %}
        {% set emailAddressErrorMessage = { text: error.inputErrors.emailAddress } %}
        {{ errorSummary(error.errorSummaryList) }}
      {% endif %}
      <form method="post" action="/cases/{{ caseReference }}/client-details/change/email-address">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}">
        <input type="hidden" name="existingEmailAddress" value="{{ existingEmailAddress }}">
        {{ govukInput({
          label: {
            text: t.forms.clientDetails.email.title,
            classes: "govuk-label--l",
            isPageHeading: true
          },
          id: "emailAddress",
          name: "emailAddress",
          spellcheck: false,
          value: currentEmailAddress,
          errorMessage: emailAddressErrorMessage
        }) }}
        <div class="govuk-button-group">
          {{ govukButton({
            text: t.common.save
          }) }}
          <a class="govuk-link" href="{{ backLinkHref }}">{{ t.common.cancel }}</a>
        </div>
      </form>
    </div>
  </div>
{% endblock %}