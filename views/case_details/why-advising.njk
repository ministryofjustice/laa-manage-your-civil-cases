{% extends "case_details/_base-case-change.njk" %}
{% from "govuk/components/character-count/macro.njk" import govukCharacterCount %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "components/errorSummaryComponent.njk" import errorSummary %}

{% block pageTitle %}{{ t('pages.caseDetails.adviseCase.title') }} - {{ serviceName }} - GOV.UK{% endblock %}

{% block formContent %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% if error %}
        {{ errorSummary(error.errorSummaryList) }}
        {% set errorMessages = {
          adviseNote: {text: error.inputErrors.adviseNote } if error.inputErrors.adviseNote
        } %}
      {% endif %}

      <form method="post" action="/cases/{{ caseReference }}/why-advising">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}">

        {{ govukCharacterCount({
          label: {
            text: t('pages.caseDetails.adviseCase.label'),
            classes: 'govuk-label--l',
            isPageHeading: true
          },
          id: "adviseNote",
          name: "adviseNote",
          value: currentAdviseNote,
          errorMessage: errorMessages.adviseNote if error,
          maxlength: 5000,
          threshold: 95
        }) }}

        <div class="govuk-button-group">
          {{ govukButton({
            text: t('common.save')
          }) }}
          <a class="govuk-link" href="/cases/{{ caseReference }}/client-details">{{ t('common.cancel') }}</a>
        </div>
      </form>
    </div>
  </div>
{% endblock %}
