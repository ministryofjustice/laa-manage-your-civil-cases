{% extends "base.njk" %}

{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "components/errorSummaryComponent.njk" import errorSummary %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% block pageTitle %}{{ t('forms.clientDetails.thirdParty.pageTitleAdd', { caseReference: caseReference, serviceName: config.SERVICE_NAME }) }}{% endblock %}

{% set backLinkHref = "/cases/" + caseReference + "/client-details" %}

{% block backLink %}
  {{ govukBackLink({
      text: t('common.back'),
      href: backLinkHref,
      classes: "govuk-!-margin-bottom-0"
    }) }}
{% endblock %}

{% block pageContent %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% if error %}
        {{ errorSummary(error.errorSummaryList) }}
        {% set thirdPartyFullNameErrorMessage = { text: error.inputErrors.thirdPartyFullName } if error.inputErrors.thirdPartyFullName %}
        {% set thirdPartyEmailAddressErrorMessage = { text: error.inputErrors.thirdPartyEmailAddress } if error.inputErrors.thirdPartyEmailAddress %}
        {% set thirdPartyContactNumberErrorMessage = { text: error.inputErrors.thirdPartyContactNumber } if error.inputErrors.thirdPartyContactNumber %}
        {% set thirdPartySafeToCallErrorMessage = { text: error.inputErrors.thirdPartySafeToCall } if error.inputErrors.thirdPartySafeToCall %}
      {% endif %}
      <h1 class="govuk-heading-l">{{ t('forms.clientDetails.thirdParty.pageH1Add') }}</h1>
      <form method="post" action="/cases/{{ caseReference }}/add-third-party">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}">
        <input type="hidden" name="existingThirdPartyFullName" value="{{ existingThirdPartyFullName }}">
        <input type="hidden" name="existingThirdPartyEmailAddress" value="{{ existingThirdPartyEmailAddress }}">
        <input type="hidden" name="existingThirdPartyContactNumber" value="{{ existingThirdPartyContactNumber }}">
        <input type="hidden" name="existingThirdPartySafeToCall" value="{{ existingThirdPartySafeToCall }}">
        {{ govukInput({
          label: {
            text: t('forms.clientDetails.thirdParty.name'),
            classes: "govuk-label--m",
            isPageHeading: false
          },
          id: "thirdPartyFullName",
          name: "thirdPartyFullName",
          value: currentThirdPartyFullName,
          errorMessage: thirdPartyFullNameErrorMessage
        }) }}
        {{ govukInput({
          label: {
            text: t('forms.clientDetails.thirdParty.emailAddressH2'),
            classes: "govuk-label--m",
            isPageHeading: false
          },
          id: "thirdPartyEmailAddress",
          name: "thirdPartyEmailAddress",
          spellcheck: false,
          value: currentThirdPartyEmailAddress,
          errorMessage: thirdPartyEmailAddressErrorMessage
        }) }}
        {{ govukInput({
          label: {
            text: t('forms.clientDetails.thirdParty.contactNumberH2'),
            classes: "govuk-label--m",
            isPageHeading: false
          },
          errorMessage: thirdPartyContactNumberErrorMessage,
          id: "thirdPartyContactNumber",
          name: "thirdPartyContactNumber",
          type: "tel",
          autocomplete: "off",
          classes: "govuk-input--width-20",
          value: currentThirdPartyContactNumber
        }) }}
        {{ govukRadios({
          name: "thirdPartySafeToCall",
          value: currentThirdPartySafeToCall,
          errorMessage: thirdPartySafeToCallErrorMessage,
          fieldset: {
            legend: {
              text: t('forms.clientDetails.thirdParty.safeToCall'),
              isPageHeading: false,
              classes: "govuk-fieldset__legend--m"
            }
          },
          items: [
            {
              value: "true",
              text: t('common.yes')
            },
            {
              value: "false",
              text: t('common.no')
            }
          ]
        }) }}
        <div class="govuk-button-group">
          {{ govukButton({
            text: t('common.save')
          }) }}
          <a class="govuk-link" href="{{ backLinkHref }}">{{ t('common.cancel') }}</a>
        </div>
      </form>
    </div>
  </div>
{% endblock %}