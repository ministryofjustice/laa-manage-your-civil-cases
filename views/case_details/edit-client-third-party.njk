{% extends "base.njk" %}

{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "components/errorSummaryComponent.njk" import errorSummary %}

{% block pageTitle %}{{ t('forms.clientDetails.thirdParty.pageTitleAdd', { caseReference: caseReference, serviceName: config.SERVICE_NAME }) }}{% endblock %}

{% set backLinkHref = "/cases/" + caseReference + "/client-details" %}

{% block backLink %}
  {{ govukBackLink({
      text: t('common.back'),
      href: backLinkHref,
      classes: "govuk-!-margin-bottom-0"
    }) }}
{% endblock %}

{% block pageContent %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% if error %}
        {{ errorSummary(error.errorSummaryList) }}
        {% set thirdPartyFullNameErrorMessage = { text: error.inputErrors.thirdPartyFullName } if error.inputErrors.thirdPartyFullName %}
        {% set thirdPartyEmailAddressErrorMessage = { text: error.inputErrors.thirdPartyEmailAddress } if error.inputErrors.thirdPartyEmailAddress %}
      {% endif %}
      <h1 class="govuk-heading-l">{{ t('forms.clientDetails.thirdParty.pageH1Add') }}</h1>
      <form method="post" action="/cases/{{ caseReference }}/add-third-party">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}">
        <input type="hidden" name="existingThirdPartyFullName" value="{{ existingThirdPartyFullName }}">
        <input type="hidden" name="existingThirdPartyEmailAddress" value="{{ existingThirdPartyEmailAddress }}">
        {{ govukInput({
          label: {
            text: t('forms.clientDetails.thirdParty.name'),
            classes: "govuk-label--m",
            isPageHeading: false
          },
          id: "thirdPartyFullName",
          name: "thirdPartyFullName",
          value: currentThirdPartyFullName,
          errorMessage: thirdPartyFullNameErrorMessage
        }) }}
        {{ govukInput({
          label: {
            text: t('forms.clientDetails.thirdParty.emailAddress'),
            classes: "govuk-label--m",
            isPageHeading: false
          },
          id: "thirdPartyEmailAddress",
          name: "thirdPartyEmailAddress",
          spellcheck: false,
          value: currentThirdPartyEmailAddress,
          errorMessage: thirdPartyEmailAddressErrorMessage
        }) }}
        <div class="govuk-button-group">
          {{ govukButton({
            text: t('common.save')
          }) }}
          <a class="govuk-link" href="{{ backLinkHref }}">{{ t('common.cancel') }}</a>
        </div>
      </form>
    </div>
  </div>
{% endblock %}